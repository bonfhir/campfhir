{
  "extends": "./tsconfig.json",
  "exclude": ["**/*.test.ts", "**/__fixtures__"],
  "compilerOptions": {
    "incremental": false,
    "outDir": "dist",
    "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
